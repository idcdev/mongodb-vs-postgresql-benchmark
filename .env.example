# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/benchmark
MONGODB_DATABASE=benchmark

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=benchmark
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_SSL=false
# POSTGRES_CONNECTION_STRING=postgresql://postgres:postgres@localhost:5432/benchmark

# Benchmark Configuration
BENCHMARK_ITERATIONS=5
BENCHMARK_DATA_SIZE=small
BENCHMARK_OUTPUT_DIR=./results
BENCHMARK_SAVE_RESULTS=true
BENCHMARK_VERBOSE=false

# Docker Configuration
USE_DOCKER=true
DOCKER_COMPOSE_FILE=./docker-compose.yml
DOCKER_NETWORK=benchmark-network 